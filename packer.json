{
  "_comment": "Create Ubuntu 22.04 LTS AMI with Ansible, Nginx, Stress for Auto Scaling",

  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "region": "",
    "source_ami": "",
    "instance_type": "",
    "vpc_id": "",
    "subnet_id": ""
  },

  "_comment1": "packer build -var \"aws_secret_key=foo\" template.json",
  "_comment2": "packer build -var-file packer-vars.json template.json",

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",

      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ubuntu",

      "ami_name": "AjayBhise-ubuntu-22-04-autoscaling-Build-{{isotime | clean_resource_name}}",
      "ami_description": "Ubuntu 22.04 LTS with Ansible, Nginx, Stress (ASG Ready)",

      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",

      "tags": {
        "Name": "AjayBhise-ubuntu-22-04-autoscaling-Build-{{isotime | clean_resource_name}}"
      }
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt update -y",
        "sudo apt install -y software-properties-common",
        "sudo apt-add-repository --yes --update ppa:ansible/ansible",
        "sudo apt update -y",
        "sudo apt install -y ansible nginx python3-apt stress git",
        "sudo git clone https://github.com/saikiranpi/autoscaling_testing.git /myrepo"
      ]
    }
  ]
}
